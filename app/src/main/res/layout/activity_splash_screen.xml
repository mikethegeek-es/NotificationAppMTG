<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivitySplashScreen">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        android:layout_gravity="center"
        app:lottie_fileName="9965-loading-spinner.json"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation_view_1"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="E-Learning E-verywhere"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="Espera, estamos preparando todo..."/>


</RelativeLayout>